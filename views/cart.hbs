<style>
  /* *********** Nomal *********** */

  .bg-color {
    background-color: #e9ecee;
  }

  .section-color {
    background-color: #fff;
  }

  /* ******** Address-Card ******** */

  .card {
    padding: 0.9375rem;
    border: dashed rgb(0, 0, 0, .3) 1px;
  }

  .card:hover {
    transition: 0.19s;
    box-shadow: 0px 4px 5px 2px rgb(17, 17, 17, 0.19);
  }

  .a-button {
    display: block;
    text-decoration: none;
    padding: 2px 10px;
    color: white;
    background-color: #252a47;
    border: solid #1d1134 2px;
    border-radius: 1px;
    transition: background-color .3s ease;
  }

  .a-button:hover {
    background-color: #1d1134;
  }

  .card-body p,
  button {
    font-size: 12px;
  }

  .info {
    margin: -1.5625rem 0 0 1.5625rem;
  }

  .sub-heading {
    color: #7e808c;
    font-size: 16px;
  }

  /* **************** Payment-Details ************** */

  .form-control {
    color: white;
    /* background-color: #223C60; */
    border: 1px solid #7e808c;
    border-radius: 1px;
    padding-left: 20px;
    vertical-align: middle;
  }

  .container .h8 {
    font-size: 22px;
    font-weight: 550;
    text-align: center;
  }

  .btn.btn-primary {
    width: 100%;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    background-image: linear-gradient(to right, #77A1D3 0%, #79CBCA 51%, #77A1D3 100%);
    border: none;
    transition: 0.5s;
    background-size: 200% auto;
  }

  .btn.btn.btn-primary:hover {
    background-position: right center;
    color: #fff;
    text-decoration: none;
  }

  .btn.btn-primary:hover .fas.fa-arrow-right {
    transform: translate(15px);
    transition: transform 0.4s ease-in-out;
  }

  .form-control {
    color: white;
    /* background-color: #223C60; */
    border: 2px solid rgb(37, 42, 71, 0.8);
    height: 60px;
    padding-left: 20px;
    vertical-align: middle;
  }

  .form-control:focus {
    color: white;
    /* background-color: #0C4160; */
    /* border: 2px solid #2d4dda; */
    box-shadow: none;
  }

  .text {
    font-size: 14px;
    font-weight: 600;
  }

  ::placeholder {
    font-size: 14px;
    font-weight: 600;
  }

  /* ******************************** Cart-Section ********************** */

  .cart-section .o-name,
  .cart-section .o-address {
    display: block;
  }

  .cart-section .o-name {
    font-size: 17px;
    font-weight: 500;
  }

  .cart-section .o-address {
    font-size: 12px;
    color: #686b78;
  }

  .cart-section .cart-body {
    font-size: 14px;
  }

  .cart-btn {
    border: 2px solid rgb(37, 42, 71);
    padding: 0px 2px;
    color: rgb(37, 42, 71);
  }

  .cart-btn .a-d-btn {
    padding: 0.625rem;
    cursor: pointer;
  }

  .coupon {
    font-size: 14px;
    border: dotted 2px rgb(0, 0, 0, 0.3);
    border-radius: 1px;
    padding: 0.625rem 1.5625rem;
  }

  .bill-detail {
    font-size: 13px;
    margin: 1.25rem 0px;
  }

  .bill-detail .subtotal {
    color: #686b78;
    margin: 0.625rem 0px;
  }

  .bill-detail .total {
    font-size: 15px;
    font-weight: 500;
    color: #000;
    margin: 0.625rem 0px;
  }

  .bill-detail hr {
    margin: 0.625rem 0px;
  }
</style>

